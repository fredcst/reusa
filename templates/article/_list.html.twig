            {% for message in app.flashes('success') %}                
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="d-flex my-2 flex-wrap flex-reverse">
                {% for item in myArticles|reverse %}
                    <div class="card m-2 shadow-sm cursor-pointer" style="width: 18rem;" onClick="window.location = '{{ path('app_article_show', {'id': item.id}) }}'"> 
                        <img class="card-img-top" src="{{asset('images/item.webp')}}" alt="Card image cap">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">{{ item.title }}</h5>
                                <p class="card-subtitle text-disabled"><i class="bi bi-suit-heart"></i> 0 </p>
                            </div>
                            <p class="card-text">{{ item.description }}</p>
                            <p class="card-subtitle text-success">$ {{ item.price }}</p>
                        </div>
                    </div>
                    {% else %}
                    <p>no records found</p>
                {% endfor %}
            </div>